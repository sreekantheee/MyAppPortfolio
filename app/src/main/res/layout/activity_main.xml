<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.example.android.myappportfolio.MainActivity">

    <TextView
        android:text="My Nanodegree Apps!"
        android:textSize="26dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_myapps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />


    <Button
        android:text="POPULAR MOVIES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_movies"
        android:layout_below="@+id/txt_myapps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:onClick="sendMessage"/>

    <Button
        android:text="STOCK HAWK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_stock"
        android:layout_below="@+id/btn_movies"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:onClick="sendMessage"/>

    <Button
        android:text="BUILD IT BIGGER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_bigger"
        android:layout_below="@+id/btn_stock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="21dp"
        android:onClick="sendMessage"/>

    <Button
        android:text="MAKE YOUR APP MATERIAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_material"
        android:layout_below="@+id/btn_bigger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:onClick="sendMessage"/>

    <Button
        android:text="GO UBIQUITOUS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ubiquitous"
        android:layout_below="@+id/btn_material"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:onClick="sendMessage"/>

    <Button
        android:text="CAPSTONE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_capstone"
        android:layout_below="@+id/btn_ubiquitous"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:onClick="sendMessage"/>

</RelativeLayout>
